# Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Agent OTP API configuration
AGENT_OTP_API_URL=http://localhost:8787
AGENT_OTP_API_KEY=ak_your_api_key_here

# Webhook configuration
WEBHOOK_SECRET=your_webhook_secret_at_least_16_chars
WEBHOOK_PORT=3001

# Optional: Set webhook URL for production (Telegram webhook mode)
# If not set, bot runs in polling mode
# WEBHOOK_URL=https://your-domain.com

# Environment
NODE_ENV=development
