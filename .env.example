# Agent OTP Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# REQUIRED: Supabase Configuration
# =============================================================================
# Your Supabase project URL (from Supabase dashboard)
SUPABASE_URL=https://your-project.supabase.co

# Your Supabase service role key (KEEP SECRET - never expose to client)
SUPABASE_SERVICE_ROLE_KEY=eyJ...

# Your Supabase anon key (can be exposed to client)
SUPABASE_ANON_KEY=eyJ...

# =============================================================================
# REQUIRED: Redis Configuration (Upstash recommended)
# =============================================================================
# Your Upstash Redis REST URL
UPSTASH_REDIS_REST_URL=https://your-instance.upstash.io

# Your Upstash Redis REST token
UPSTASH_REDIS_REST_TOKEN=your-token

# =============================================================================
# REQUIRED: JWT Secret for Token Signing
# =============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-min-32-characters

# =============================================================================
# OPTIONAL: Telegram Bot Configuration
# =============================================================================
# Your Telegram bot token (from @BotFather)
TELEGRAM_BOT_TOKEN=

# =============================================================================
# OPTIONAL: Email Configuration (for notifications)
# =============================================================================
# SMTP configuration for sending emails
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@agentotp.com

# Or use Resend API
RESEND_API_KEY=

# =============================================================================
# OPTIONAL: API Configuration
# =============================================================================
# API host and port
API_HOST=0.0.0.0
API_PORT=3000

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# =============================================================================
# OPTIONAL: Logging and Monitoring
# =============================================================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Sentry DSN for error tracking
SENTRY_DSN=

# =============================================================================
# Development Only
# =============================================================================
# Set to 'development' or 'production'
NODE_ENV=development

# Enable debug mode (more verbose logging)
DEBUG=false
